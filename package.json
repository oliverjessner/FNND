{
    "name": "no-bullshit-rss",
    "version": "0.1.0",
    "type": "module",
    "description": "RSS-based news aggregator",
    "main": "electron/main.cjs",
    "scripts": {
        "start": "node backend/server.js",
        "electron": "electron .",
        "dev": "node --watch backend/server.js",
        "db:init": "node scripts/init-db.js",
        "postinstall": "echo \"skip\"",
        "dist:mac": "electron-rebuild -f -w @vscode/sqlite3 && electron-builder --mac dmg --arm64",
        "dist:win": "electron-builder --win nsis --x64",
        "dist:linux": "electron-builder --linux AppImage --x64",
        "dist:all": "electron-rebuild -f -w @vscode/sqlite3 && electron-builder --mac --win --linux",
        "dist:all:workaround": "PYTHON=/opt/homebrew/opt/python@3.11/bin/python3.11 CSC_IDENTITY_AUTO_DISCOVERY=false npm run dist:all",
        "build:all": "npm run dist:all:workaround"
    },
    "dependencies": {
        "@biu/simhash": "^0.1.1",
        "@vscode/sqlite3": "5.1.12-vscode",
        "express": "^5.2.1",
        "iconv-lite": "^0.6.3",
        "rss-parser": "^3.13.0"
    },
    "devDependencies": {
        "electron": "^28.3.3",
        "electron-builder": "^24.13.3",
        "electron-rebuild": "^3.2.9"
    },
    "build": {
        "directories": {
            "output": "electron/dist",
            "buildResources": "electron/build"
        },
        "afterPack": "scripts/afterPack-adhoc-sign.cjs",
        "appId": "com.oliverjessner.no-bullshit-rss",
        "productName": "NO BULLSHIT RSS",
        "files": [
            "electron/**",
            "!electron/dist/**",
            "!electron/package/**",
            "backend/**",
            "public/**",
            "backend/database/**",
            "scripts/**",
            "scripts/sources.json",
            "package.json",
            "electron/build/icons/**",
            "node_modules/**"
        ],
        "icon": "electron/build/icons/icon.icns",
        "asarUnpack": [
            "node_modules/@vscode/sqlite3/**"
        ],
        "mac": {
            "icon": "electron/build/icons/icon.icns"
        }
    }
}
